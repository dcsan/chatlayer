#gameCover {
  position: absolute;
  // background-color: rgba(255,255,255, 0.9)
  // background-color white
  top: 60px;
  left: 0;
  width: 94%
  margin 3%
  height 90%
  z-index: 500
  // border-radius 10px
  // padding-bottom 10%

  #startButton {
    position absolute
    bottom 10%
  }

  #coverMessage {
    position absolute
    top 30%
    padding 10%
    width 100%
    text-align center
    font-family 'Oswald'
    font-size 24px
    color black
  }

}

#gameBoard {
  position: fixed;
  width: 100%
  height: 100%
  // background-color #f9ffb9
  border 1px solid blue
  top: 50px;
  left: 0px;
  z-index 1
}


#timerBox {
  position absolute
  top 70px
  left 5%
  width 90%
  background-color white
  border-radius 5px
  height 20px
  z-index 600
  #timerPct {
    position relative
    top 1px
    left 1px
    height 18px
    background-color #00FF00
    width 100%
    border-radius 5px
  }
}

#skipButton {
  position fixed
  bottom 20rem
  right 20rem
}

.debugBox {
  position: fixed;
  bottom: 20px;
  color: black;
  background-color: rgba(128,255,255,0.5);
  z-index: 200;
  font-size: 10px;
  display: none;
}

.hintBox {
  position: fixed
  bottom: 0px
  width: 90%
  height: 60px;
  margin: 5%
  background-color: rgba(255, 255, 255, 1)
  color: black
  font-family: 'Mouse Memoirs', sans-serif;
  color: #000;
  font-size: 20px;
  text-align: center
  // border: 1px solid gray;
  border-radius: 10px;
  cursor: pointer
}

.hintText {
  position: relative;
  top: 50%;
  transform: translateY(-30%);
}

.center {
  margin-left: auto;
  margin-right: auto;
  width: 70%;
}


.centerModal {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  height: 90%;
  z-index: 1000;
}

