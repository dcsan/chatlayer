template(name='index')

  +contentFor "headerTitle"
    h1.title BackChannel


  +ionView
    +ionContent
      +ionList

        //- +ionItem(itemClasses='darkBlock')
        .topLogoPanel
          img.coverStripImage.animated.fadeIn(src='/assets/logo.jpg')
          .subheading We're in your hackathons!

        +ionItem(path='stream' iconLeft=true iconRight=true)
          +ionIcon(icon='university' class='dark')
          h2 Streaming Live Now!
          +ionIcon(icon="ios-arrow-right")

        +ionItem(path='roomList' iconLeft=true iconRight=true)
          +ionIcon(icon='ios-list' class='dark')
          h2 Rooms
          +ionIcon(icon="ios-arrow-right")

        +ionItem(path='map' iconLeft=true iconRight=true)
          +ionIcon(icon='help-circled' class='dark')
          h2 Map! Who's Where!
          +ionIcon(icon="ios-arrow-right")

        +ionItem(path='about' iconLeft=true iconRight=true)
          +ionIcon(icon='help-circled' class='dark')
          h2 About
          +ionIcon(icon="ios-arrow-right")
