cellHeight = 26.5px

.floorplan
  width 100%
  background-color #d7d7d7
  
  .bub
    position absolute
    bottom cellHeight
    left -50%
    padding 5%
    background-color #ddd
    border-radius 3px
    border: 1px solid #444
    font-size 16px
    width 200%
    color black
    z-index 200
    box-shadow 1px 1px 5px 2px rgba(0,0,0,.4)

    

  .stage
    height cellHeight
    text-align center

  .tableBox
    width 100%

    .oneTable
      //border 1px solid blue
      position relative
      display inline-block
      background-color #f7f7f7
      font-size 24px
      -webkit-box-shadow inset 1px 1px 1px 2px rgba(255,255,255,1)
      -moz-box-shadow inset 1px 1px 1px 2px rgba(255,255,255,1)
      box-shadow inset 1px 1px 1px 2px rgba(0,0,0,.2)
      color #444
      padding-top 8px
      width 11%
      height cellHeight
      text-align center
      cursor pointer
      border-radius: 2px
      
      

      .avatar
        position absolute
        width cellHeight
        height cellHeight
        bottom 3px
        z-index 200
        &:hover
          z-index 250
          transform scale(1.1)
          // border 2px solid white

      
      .tableName
        position absolute
        left 10px
        bottom 0px
        font-size 16px
        font-family "Impact"
        z-index 150

    .spacer
      display inline-block
      width 20px
