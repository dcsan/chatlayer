template(name='map')

  .floorplan
    #stage ---------Presentation Stage---------
    #audience OffSite audience
    
    .tableBox
      each tables
        span.oneTable(id=name data-tableName=name)
          if avatars
            each avatars
              img.avatar(src=this style="{{{randomPos}}}")
          //- else
          //-   img.avatar(src="/anon.png")
          span.tableName {{name}}

        if this.spacer
          span.hspacer

        if this.endcap
          br
        if this.vspace
          br

